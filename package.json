{
    "name": "lineboi",
    "author": "lilkraftwerk",
    "version": "0.0.1",
    "description": "draw lines, plot with a pen, make gifs",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "start": "concurrently \"npm:webpack:dev\" \"npm:cncserver\" \"npm:electron\"",
        "dev": "concurrently \"npm:cncserver\" \"npm:webpack:watch\" \"npm:electron:dev\"",
        "app": "concurrently \"npm:cncserver\" \"npm:electron\"",
        "electron": "run-electron main.js true",
        "electron:dev": "run-electron main.js",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "docs": "docsify serve ./docs",
        "reset": "rimraf ./node_modules; rimraf package-lock.json; npm i",
        "webpack:watch": "webpack --watch",
        "webpack:dev": "webpack --mode=development",
        "webpack:prod": "webpack --mode=production",
        "webpack:server": "webpack-dev-server --mode=development",
        "cncserver": "node ./node_modules/cncserver --corsDomain=* --botType=axidraw --serialPath=$(node ./src/plotting/getPort.js)",
        "postcncserver": "npm run clean-up",
        "clean-up": "rm /tmp/app.cncserver",
        "format": "concurrently \"npm:style:fix\" \"npm:biome:fix\"",
        "format:check": "concurrently \"npm:style:check\" \"npm:biome:check\"",
        "biome:check": "biome check . --diagnostic-level=error",
        "biome:format": "biome format .",
        "biome:fix": "biome check --write . --diagnostic-level=error",
        "style:check": "stylelint \"src/**/*.css\"",
        "style:fix": "stylelint \"src/**/*.css\" --fix",
        "test": "jest --colors --verbose",
        "test:resetscreenshots": "rimraf tests/screenshots/*.png; npm run test:update",
        "test:src": "jest ./src --colors --verbose",
        "test:filters": "jest --testMatch='**/*.example.js' --colors --verbose",
        "test:filters:watch": "jest --watch --testMatch='**/*.example.js' --colors --verbose",
        "test:update": "jest --u --colors --verbose",
        "test:update:watch": "jest --u --watch --colors --verbose",
        "test:watch": "jest --colors --verbose --watch",
        "test:coverage": "jest ./src --colors --verbose --collectCoverage"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/vendor/**"
        ],
        "setupFiles": [
            "jest-canvas-mock"
        ],
        "moduleNameMapper": {
            "^$components(.*)": "<rootdir>/src/components$1",
            "^$mainProcess(.*)": "<rootdir>/src/mainProcess$1",
            "^$store(.*)": "<rootdir>/src/store$1",
            "^$utils(.*)": "<rootdir>/src/utils$1",
            "^$assets(.*)": "<rootdir>/src/assets$1",
            "^$plotting(.*)": "<rootdir>/src/plotting$1",
            "^$filters(.*)": "<rootdir>/src/filters$1",
            "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
        },
        "transform": {
            "^.+\\.jsx?$": [
                "jest-esbuild",
                {
                    "platform": "node",
                    "loader": "jsx"
                }
            ]
        }
    },
    "build": {
        "appId": "com.electron.lineboi"
    },
    "dependencies": {
        "@mathigon/euclid": "^1.1.15",
        "array-move": "^3.0.0",
        "base64image-to-file": "^1.2.0",
        "bresenham-js": "^0.0.0",
        "chaikin-smooth": "^1.0.4",
        "cncserver": "^2.9.0",
        "concurrently": "^9.0.0",
        "esbuild": "^0.25.0",
        "esbuild-loader": "^4.1.0",
        "fs-jetpack": "^5.0.0",
        "gif.js.optimized": "^1.0.1",
        "lodash": "^4.17.15",
        "node-fetch": "^3.0.0",
        "point-in-polygon": "^1.0.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-redux": "^9.0.0",
        "react-tiny-popover": "^8.0.0",
        "redux": "^5.0.0",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^3.0.0",
        "redux-undo": "1.1.0",
        "reselect": "^5.0.0",
        "run-electron": "^2.0.0",
        "serialport": "^13.0.0",
        "simplify-js": "^1.2.3",
        "smooth-polyline": "^1.0.8",
        "svg-path-to-polygons": "^0.1.0",
        "text-to-svg": "^3.1.5"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.0.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.0.0",
        "body-parser": "^2.0.0",
        "canvas": "^3.0.0",
        "canvas-to-buffer": "^4.0.0",
        "copy-webpack-plugin": "^13.0.0",
        "css-declaration-sorter": "^7.0.0",
        "css-loader": "^7.0.0",
        "electron": "^37.3.1",
        "electron-extension-installer": "^2.0.0",
        "html-loader": "^5.0.0",
        "html-webpack-plugin": "^5.0.0",
        "jest": "^29.7.0",
        "jest-canvas-mock": "^2.2.0",
        "jest-css-modules": "^2.1.0",
        "jest-esbuild": "^0.4.0",
        "jest-image-snapshot": "^6.0.0",
        "playwright": "^1.43.1",
        "postcss": "^8.4.31",
        "progress-bar-webpack-plugin": "^2.1.0",
        "raw-loader": "^4.0.1",
        "rimraf": "^6.0.0",
        "style-loader": "^4.0.0",
        "stylelint": "^16.0.0",
        "stylelint-order": "^7.0.0",
        "webpack": "^5.94.0",
        "webpack-build-notifier": "^3.0.0",
        "webpack-cli": "^6.0.0",
        "webpack-dev-server": "^5.2.1"
    },
    "overrides": {
        "esbuild": "^0.25.0"
    }
}
