{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "timezone": "America/Chicago",
    "pre-commit": {
        "enabled": true
    },
    "patch": {
        "enabled": false
    },
    "schedule": [
        "on the first day of the month"
    ],
    "automergeType": "branch",
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true
        },
        {
            "extends": [
                "packages:linters"
            ],
            "groupName": "linters",
            "automerge": true
        },
        {
            "extends": [
                "packages:jsTest"
            ],
            "groupName": "JS test packages",
            "automerge": true
        },
        {
            "automerge": true,
            "matchPackageNames": [
                "/pre-commit/"
            ]
        },
        {
            "groupName": "webpack",
            "matchPackageNames": [
                "/webpack/",
                "/-loader/"
            ]
        },
        {
            "groupName": "redux",
            "matchPackageNames": [
                "/redux/",
                "/reselect/"
            ]
        }
    ]
}
